<?xml version="1.0" encoding="UTF-8"?>
<wrapper namespace="com.YaNan.debug.test" datasource="testJdb" database="YaNan_Account">
	<select id="test" resultType="map">
		SELECT * FROM test
		<trim prefix = "where" prefixoverride="and or" suffix="" suffixoverride="and or">
			<if test="id != null and id > 0">id = #{id}</if>
			and
			<if test = 'name!=null'>name like concat('%',#{name})</if>
		</trim>
	</select>
	<insert id="insert" resultType="int">
		insert into test ( id , name ) values 
		<foreach collection="list" index="index" item = "item" open="" separator="," close="">
			<if test = "item.id != null">
				( #{item.id} , #{item.name} )
			</if>
		</foreach>
	</insert>
	<insert id="insert2" resultType="int">
		insert into test2 ( id , name ) values 
		<foreach collection="list" index="index" item = "item" open="" separator="," close="">
			<if test = "item.id != null">
				( #{item.id} , #{item.name} )
			</if>
		</foreach>
	</insert>
</wrapper>